doctype html
html
  head
    title Apple Inventory App
    meta(name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1")
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css", rel="stylesheet", integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3", crossorigin="anonymous")
    link(rel='stylesheet', href='/stylesheets/style.css')
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js", integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p", crossorigin="anonymous")
    link(href="https://fonts.googleapis.com/css2?family=DM+Sans&display=swap" rel="stylesheet")
  body(class='overflow-hidden')
    main(class='overflow-auto vh-100')
      nav(class='navbar navbar-expand-lg navbar-light bg-light')
        div(class='container-fluid')
          a(class='navbar-brand', href='/')
            img(class='d-inline-block align-text-top', src="/public/images/apple_logo.png", width="24")
            span(class='mx-2') Apple Inventory App
          button(class='navbar-toggler', type='button', data-bs-toggle='collapse', data-bs-target='#navbarSupportedContent', aria-controls='navbarSupportedContent', aria-expanded='false', aria-label='Toggle navigation')
            span(class='navbar-toggler-icon')
          div(class='collapse navbar-collapse', id='navbarSupportedContent')
            div(class='navbar-nav ms-auto')
              a(class='nav-link', href='/') Home 
              div(class='nav-item dropdown')
                a(class='nav-link dropdown-toggle', href='browse/iPhone', id='navbarDropdown', role='button', data-bs-toggle='dropdown', aria-expanded='false') iPhone 
                ul(class='dropdown-menu dropdown-menu-end', aria-labelledby='navbarDropdown')
                  li
                    a(class='dropdown-item', href='/browse/iPhone') All iPhones
                  li 
                    hr(class='dropdown-divider')
                  li
                    a(class='dropdown-item', href='/browse/iPhone/create') Add new iPhone item
              div(class='nav-item dropdown')
                a(class='nav-link dropdown-toggle', href='/browse/iPad', id='navbarDropdown', role='button', data-bs-toggle='dropdown', aria-expanded='false') iPad 
                ul(class='dropdown-menu dropdown-menu-end', aria-labelledby='navbarDropdown')
                  li 
                    a(class='dropdown-item', href='/browse/iPad') All iPads
                  li 
                    hr(class='dropdown-divider')  
                  li
                    a(class='dropdown-item', href='/browse/iPad/create') Add new iPad item
              div(class='nav-item dropdown')
                a(class='nav-link dropdown-toggle', href='/browse/Mac', id='navbarDropdown', role='button', data-bs-toggle='dropdown', aria-expanded='false') Mac 
                ul(class='dropdown-menu dropdown-menu-end', aria-labelledby='navbarDropdown')
                  li
                    a(class='dropdown-item', href='/browse/Mac') All Macs
                  li 
                    hr(class='dropdown-divider')
                  li
                    a(class='dropdown-item', href='/browse/Mac/create') Add new Mac item
      block content
