extends layout

block content
  div(class='p-3')
    p(class='fs-2 text-white') Browse / #{title}
      div
        a(href='/browse' class='text-white') ‚Üê Back
    div(class='container')
      div(class='row row-cols-1 row-cols-md-3 g-5')
        each item in category
          div(class='col')
            div(class='card h-100')
              img(src=item.img class='card-img-top')
              div(class='card-body')
                h5(class='card-title')= item.name
                p(class='card-text')= item.description 
              a(href=item.url class='btn btn-dark' style='background-color: black') View