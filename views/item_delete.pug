extends layout 

block content
  div(class='p-3')
    p(class='fs-2 text-white') Browse / #{item.category} / #{item.name}
      div 
        a(href='/browse/' + item.category + '/' + item._id class='text-white') ‚Üê Back
    div.container.bg-white.p-4.rounded
      h1 #{title}

      p Do you really want to delete this item?

      form(method='POST' action='')
        div.form-group
          input#itemid.form-control(type='hidden', name='itemid', required='true', value=item._id)
        button.btn.btn-danger(type='submit') Delete